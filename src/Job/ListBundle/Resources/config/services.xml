<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="parent.repository"
                 factory-service="doctrine.orm.default_entity_manager"
                 factory-method="getRepository"
                 abstract="true">
        </service>

        <service id="job.repository"
                 class="Job\ListBundle\Repository\JobRepository"
                 parent="parent.repository">
            <argument>Job\ListBundle\Entity\Job</argument>
        </service>

        <service id="job.form.type"
                 class="Job\ListBundle\Form\JobType">
            <tag name="form.type" />
        </service>

    </services>
</container>
